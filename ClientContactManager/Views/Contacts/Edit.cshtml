@model ClientContactManager.Models.Contact

@{
    ViewData["Title"] = "Edit Contact";
}

<h1>Edit Contact</h1>

<hr />

<ul class="nav nav-tabs" id="contactTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab" aria-controls="general" aria-selected="true">General</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="clients-tab" data-bs-toggle="tab" data-bs-target="#clients" type="button" role="tab" aria-controls="clients" aria-selected="false">Client(s)</button>
    </li>
</ul>

<div class="tab-content" id="contactTabsContent">
    <!-- General Tab -->
    <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="mt-3">
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Surname" class="form-label"></label>
                            <input asp-for="Surname" class="form-control" />
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <small class="form-text text-muted">The entered value should be a valid email address and be unique for all contacts.</small>
                        </div>
                        
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Client(s) Tab -->
    <div class="tab-pane fade" id="clients" role="tabpanel" aria-labelledby="clients-tab">
        <div class="mt-3">
            @if (ViewBag.AvailableClients != null && ViewBag.AvailableClients.Count > 0)
            {
                <div class="row mb-3">
                    <div class="col-md-6">
                        <form asp-action="LinkClient" method="post">
                            <input type="hidden" name="contactId" value="@Model.Id" />
                            <div class="input-group">
                                <select name="clientId" class="form-select" required>
                                    <option value="">-- Select Client to Link --</option>
                                    @foreach (var client in ViewBag.AvailableClients)
                                    {
                                        <option value="@client.Id">@client.Name (@client.ClientCode)</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-primary">Link Client</button>
                            </div>
                        </form>
                    </div>
                </div>
            }

            @if (Model.ClientContacts.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th class="text-start">Client name</th>
                            <th class="text-start">Client code</th>
                            <th class="text-start">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cc in Model.ClientContacts.OrderBy(c => c.Client.Name))
                        {
                            <tr>
                                <td class="text-start">@cc.Client.Name</td>
                                <td class="text-start">@cc.Client.ClientCode</td>
                                <td class="text-start">
                                    <form asp-action="UnlinkClient" method="post" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to unlink this client?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="contactId" value="@Model.Id" />
                                        <input type="hidden" name="clientId" value="@cc.Client.Id" />
                                        <button type="submit" class="btn btn-link p-0">Unlink</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No contact(s) found.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
