@model ClientContactManager.Models.Contact

@{
    ViewData["Title"] = "Delete Contact";
}

<h1>Delete Contact</h1>

<h3>Are you sure you want to delete this contact?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
        
        <dt class="col-sm-2">Surname</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Surname)</dd>
        
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
        
        <dt class="col-sm-2">Linked Clients</dt>
        <dd class="col-sm-10">@Model.LinkedClientsCount</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
