@model ClientContactManager.Models.Client

@{
    ViewData["Title"] = "Delete Client";
}

<h1>Delete Client</h1>

<h3>Are you sure you want to delete this client?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
        
        <dt class="col-sm-2">Client Code</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ClientCode)</dd>
        
        <dt class="col-sm-2">Linked Contacts</dt>
        <dd class="col-sm-10">@Model.LinkedContactsCount</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
