@model ClientContactManager.Models.Client

@{
    ViewData["Title"] = "Edit Client";
}

<h1>Edit Client</h1>

<hr />

<ul class="nav nav-tabs" id="clientTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab" aria-controls="general" aria-selected="true">General</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="contacts-tab" data-bs-toggle="tab" data-bs-target="#contacts" type="button" role="tab" aria-controls="contacts" aria-selected="false">Contact(s)</button>
    </li>
</ul>

<div class="tab-content" id="clientTabsContent">
    <!-- General Tab -->
    <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="mt-3">
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ClientCode" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ClientCode" class="form-label"></label>
                            <input asp-for="ClientCode" class="form-control" readonly disabled />
                            <small class="form-text text-muted">Client code cannot be changed after creation.</small>
                        </div>
                        
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact(s) Tab -->
    <div class="tab-pane fade" id="contacts" role="tabpanel" aria-labelledby="contacts-tab">
        <div class="mt-3">
            @if (ViewBag.AvailableContacts != null && ViewBag.AvailableContacts.Count > 0)
            {
                <div class="row mb-3">
                    <div class="col-md-6">
                        <form asp-action="LinkContact" method="post">
                            <input type="hidden" name="clientId" value="@Model.Id" />
                            <div class="input-group">
                                <select name="contactId" class="form-select" required>
                                    <option value="">-- Select Contact to Link --</option>
                                    @foreach (var contact in ViewBag.AvailableContacts)
                                    {
                                        <option value="@contact.Id">@contact.FullName (@contact.Email)</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-primary">Link Contact</button>
                            </div>
                        </form>
                    </div>
                </div>
            }

            @if (Model.ClientContacts.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th class="text-start">Contact Full Name</th>
                            <th class="text-start">Contact email</th>
                            <th class="text-start">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cc in Model.ClientContacts.OrderBy(c => c.Contact.Surname).ThenBy(c => c.Contact.Name))
                        {
                            <tr>
                                <td class="text-start">@cc.Contact.FullName</td>
                                <td class="text-start">@cc.Contact.Email</td>
                                <td class="text-start">
                                    <a asp-action="UnlinkContact" asp-route-clientId="@Model.Id" asp-route-contactId="@cc.Contact.Id" 
                                       onclick="return confirm('Are you sure you want to unlink this contact?');">Unlink</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No contacts found.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
