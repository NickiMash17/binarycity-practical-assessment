@model IEnumerable<ClientContactManager.Models.Client>

@{
    ViewData["Title"] = "Clients";
}

<section class="page-section">
    <div>
        <h1 class="mb-1">Clients</h1>
        <p class="page-subtitle">Review and manage your client records and linked contact counts.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">Create New Client</a>
</section>

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="text-start">Name</th>
                <th class="text-start">Client code</th>
                <th class="text-center">No. of linked contacts</th>
                <th class="text-start">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-start">@Html.DisplayFor(modelItem => item.Name)</td>
                    <td class="text-start">@Html.DisplayFor(modelItem => item.ClientCode)</td>
                    <td class="text-center">@item.LinkedContactsCount</td>
                    <td class="text-start">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="empty-state">
        <p class="mb-0">No clients found.</p>
    </div>
}
